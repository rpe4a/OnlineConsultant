@using OnlineConsultant.Models
@model AccountModel
@{
    ViewBag.Title = "Вход для специалиста";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @if (ViewBag.IsError)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Ошибка!</strong>Не верный логин или пароль
            </div>
        }
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="panel panel-default box-shadow-2">
                <div class="panel-heading text-center">
                    <h4>Вход для специалиста</h4>
                </div>
                <div class="panel-body">

                   
                    <div class="form-group">
                        <label for="username">Пользователь</label>
                        @Html.TextBoxFor(x => x.Username, new { id = "username", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pass">Пароль</label>
                        @Html.PasswordFor(x => x.Password, new { id = "pass", @class = "form-control" })
                    </div>


                </div>
                <div class="panel-footer text-center">
                    <button class="btn btn-primary btn-lg">Войти</button>
                </div>
            </div>
        }
    </div>
</div>
